<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_item_news"
        android:layout_width="150dp"
        android:layout_height="135dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_item_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/main_banner"
            android:contentDescription="@string/txt_todo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_item_news"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/txt_judul"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cdv_item_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cdv_item_news"
        app:layout_constraintTop_toTopOf="@+id/cdv_item_news"
        app:layout_constraintVertical_bias="0.0"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/cdv_item_news"
        app:layout_constraintStart_toEndOf="@id/cdv_item_news"
        app:layout_constraintTop_toBottomOf="@id/tv_title_item_news"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_person_outline" />

    <TextView
        android:id="@+id/tv_author_item_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="author"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="72dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_date_item_news"
        app:layout_constraintStart_toEndOf="@+id/tv_date_item_news"
        app:layout_constraintTop_toTopOf="@+id/tv_date_item_news"
        app:srcCompat="@drawable/ic_baseline_access_time" />

    <TextView
        android:id="@+id/tv_time_item_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:text="1 min read"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cdv_item_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toEndOf="@+id/cdv_item_news"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_item_news"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_bookmark" />
</androidx.constraintlayout.widget.ConstraintLayout>